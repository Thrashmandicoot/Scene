<!-- Portfolio Item Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= @space.title %>
            <small>Item Subheading</small>
        </h1>
    </div>
</div>
<!-- /.row -->
<div class="container">
<!-- Portfolio Item Row -->
	<div class="row">

	    <div class="col-md-8">
	    	<% if @space.img %>
	        <img class="img-responsive" src="<%= @space.img %>" alt="Organization's Space.img">
	        <% end %>
	        <% if @space.image.url %>
	        <%= image_tag @space.image.url(:thumb) %>
	        <% end %>
	    </div>

	    <div class="col-md-4">
	        <h3>Scene Description</h3>
	        <p><%= @space.description %></p>
	        <h3>Project Details</h3>
	        <ul>
	            <li><%= link_to @organization.name, organization_path(@organization)%></li>
	        </ul>
	    </div>

	</div>
</div>
<!-- /.row -->

 <% if session[:organization_id] == @organization.id %>
    <button><%= link_to "Edit", edit_organization_space_path(@space.organization_id, @space) %></button>
    <button><%= link_to "Remove", organization_space_path(@space.organization_id, @space), method: :delete,data: { confirm: 'Are you sure?' } %></button>
  <% end %>


<div ng-controller="ModalSignupCtrl">
    <script type="text/ng-template" id="myModalContent.html">
        <div class="modal-header">
            <h3 class="modal-title">Sign Up</h3>
        </div>
        <div class="modal-body">
              <div ng-repeat="item in items">
                  <a class="btn btn-default btn-block" href="{{ item.link }}" selected.item = item>{{ item.title }}</a>
              </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
        </div>
    </script>

    <button type="button" class="btn btn-default" ng-click="open()">Sign Up</button>
</div>

<h1>Gallery Homepage</h1>
<h3>Featured Pieces:</h3>
<div>
	<% @random_pieces.each do |piece| %>
		<div> <%= link_to image_tag(piece.img), artist_piece_path(piece.artist_id, piece.id) %></div>

	<% end %>

	<h3>Featured Scenes:</h3>
	<% @random_scenes.each do |scene| %>
		<%= link_to image_tag(scene.img), organization_space_path(scene.organization_id, scene.id) %>
	<% end %>

	<h3>Pieces by Category</h3>
	<% @gallery_images.each do |image| %>
		<%= image %>
	<% end %>
	
</div>

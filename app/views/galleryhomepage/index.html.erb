<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12" id="featured">
        <h1 class="page-header">Featured Artists and Scenes</h1>
    </div>
</div>
<!-- /.row -->

 <!-- Featured Pieces Row -->
  <div class="row" style="margin-bottom:20px;">
    <% @pieces.each do |piece| %>
      <div class="col-md-4 img-portfolio">
          <a href="portfolio-item.html">
              <img class="img-responsive img-hover" src="<%= piece.image.url %>" alt="piece.title">
          </a>
          <h3>
              <%= link_to piece.title, artist_piece_path(piece.artist_id, piece)%>
          </h3>
          <p>
            Medium: <%= piece.description.gsub(/[\[\]]/, "") %>
          </p>
      </div>
    <% end %>
  </div>

  <!-- Featured Scenes Row -->
   <div class="row" style="margin-bottom:20px;">
       <% @scenes.each do |scene| %>
         <div class="col-md-4 img-portfolio">
             <a href="portfolio-item.html">
                 <img class="img-responsive img-hover" src="<%= scene.image.url %>" alt="scene.title">
             </a>
             <h3>
                 <%= link_to scene.title, organization_space_path(scene.organization_id, scene)%>
             </h3>
             <p>
               Description: <%= scene.description.gsub(/[\[\]]/, "") %>
             </p>
         </div>
       <% end %>
     </div>

<div class="buffer" style="height: 100px;"></div>

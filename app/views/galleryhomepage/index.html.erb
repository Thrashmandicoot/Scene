<!-- Marketing Icons Section -->
  <div class="row">

    <div class="col-lg-12">
      <%= image_tag'logo3.png', :class => "logo"%>
      <a class="btn-home btn-black" href="<%= user_location_path%>" style="margin-bottom: 80px;">FIND LOCAL ARTISTS</a>

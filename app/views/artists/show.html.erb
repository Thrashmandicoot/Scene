<h1><%= @artist.name %></h1>

<img src="<%= @artist.avatar %>">
<h3>Address: </h3>
<p><%= @artist.address %></p>
<h3>Bio: </h3>
<p><%= @artist.bio %></p>

<h5>Email: <%= @artist.email %></h5>

<h3>Social Media</h3>
<ul>
  <li><%= @artist.facebook %></li>
  <li><%= @artist.twitter %></li>
</ul>

<h3>Pieces</h3>
<div>
  <% @pieces_sample = @artist.pieces.sample(3) %>
  <% @pieces_sample.each do |piece| %>
    <div><%= link_to image_tag(piece.img), artist_piece_path(@artist, piece) %></div>

    <% if session[:artist_id] == @artist.id %>
      <button><%= link_to "edit", [:edit, piece.artist, piece] %></button>
      <button><%= link_to "destroy", [piece.artist, piece] method: :delete, data: {confirm: 'Are you sure?'} %></button>
    <% end %>
  <% end %>
</div>
<button><%= link_to "New", new_artist_piece_path(@artist) %></button>



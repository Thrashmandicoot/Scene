<div class="background">

<% if session[:organization_id] || session[:artist_id] %>
    <h1>Artists In Your Area</h1>
  <% else %>
    <h1>Artists on Scene</h1>
  <% end %>
	<div class="row">
<% @artists.each do |artist| %>
		<div class="col-sm-3">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

            <div class="card hovercard">
                <div class="cardheader">

                </div>
                <% unless artist.pieces[0].nil? %>
                <script type="text/javascript">
                  $('div .cardheader').last().css('background', "url(<%= "#{artist.pieces.sample.img}" %>)")
                </script>
                <% end %>
                <div class="avatar">
                    <%= link_to image_tag(artist.avatar), artist_path(artist) %>
                </div>
                <div class="info">
                    <div class="title">
                        <%= link_to artist.name, artist_path(artist) %>
                    </div>
                    <div class=""><%= link_to artist.website, "http://#{artist.website}" %></div>
                    <div class="desc">Passionate designer</div>
                    <div class="desc">Curious developer</div>
                    <div class="desc">Tech geek</div>
                </div>
                <div class="bottom">
                    <% if artist.twitter %>
                    <a class="btn btn-primary btn-twitter btn-sm" href="<%= "http://twitter.com/#{artist.twitter}" %>">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <% end %>
                    <% if artist.facebook %>
                    <a class="btn btn-primary btn-sm" rel="publisher"
                       href="<%= "http://#{artist.facebook}" %>">
                        <i class="fa fa-facebook"></i>
                    </a>
                    <% end %>
                </div>
            </div>

        </div>
<% end %>
</div>

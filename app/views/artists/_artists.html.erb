<div class="row">
<% @artists.each do |artist| %>
		<div class="col-sm-3">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

            <div class="card hovercard">
                <div class="cardheader">

                </div>
                <% unless artist.pieces.empty? %>
                <script type="text/javascript">
                    $('div .cardheader').last().css('background', "url(<%= "#{artist.pieces.sample.image.url}" %>)");
                </script>
                <% end %>
                <div class="avatar">
                    <%= link_to image_tag(artist.avatar), artist_path(artist) %>
                </div>
                <div class="info">
                    <div class="title">
                        <%= link_to artist.name, artist_path(artist) %>
                    </div>
                    
                    <div class="desc"><%= "#{artist.bio}" %></div>
                </div>

                <div class="bottom">
                    <% if artist.twitter %>
                    <a class="btn card-btn btn-primary btn-twitter btn-sm" href="<%= "http://twitter.com/#{artist.twitter}" %>">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <% end %>
                    <% if artist.facebook %>
                    <a class="btn card-btn btn-primary btn-sm" rel="publisher"
                       href="<%= "http://#{artist.facebook}" %>">
                        <i class="fa fa-facebook"></i>
                    </a>
                    <% end %>
                    <% if artist.website %>
                    <a class="btn card-btn btn-primary btn-sm" rel="publisher"
                       href="<%= "#{artist.website}" %>">
                        <i class="fa fa-laptop"></i>
                    </a>
                    <% end %>
                </div>
            </div>
        </div>
<% end %>

<h1><%= @organization.name %></h1>

<img src="<%= @organization.avatar %>">
<h3>Address: <%= @organization.address %></h3>
<h3>Bio: <%= @organization.bio %></h3>
<ul>Scenes
  <% @spaces_sample = @organization.spaces.sample(2) %>
  <% @spaces_sample.each do |space| %>
  <li><img src="<%= space.img %>"></li>
  <li><p><%= space.title %></p></li>

  <% end %>
</ul>
<%= link_to "Show More Scenes of this Company", organization_spaces_path(@organization.id) %>
<%= link_to "Show ALL Scenes", spaces_path %>
<ul>Social Media
  <li><%= @organization.facebook %></li>
  <li><%= @organization.twitter %></li>
</ul>

<h3>Email: <%= @organization.email %></h3>


<!-- if logged in... -->
<%= link_to 'Create New Space', new_organization_space_path(@organization) %>
<%= link_to "edit", edit_organization_path %>
<%= link_to "destroy", @organization, method: :delete %>

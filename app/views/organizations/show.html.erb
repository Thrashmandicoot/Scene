<h1><%= @organization.name %></h1>

<img src="<%= @organization.avatar %>">
<h3>Address: <%= @organization.address %></h3>
<h3>Bio: <%= @organization.bio %></h3>
<ul>Scenes
  <% @organization.orgscenes.each do |scene| %>
  <li><img src="<%= scene.img %>"></li>
  <% end %>
</ul>
<ul>Social Media
  <li><%= @organization.facebook %></li>
  <li><%= @organization.twitter %></li>
</ul>

<h3>Email: <%= @organization.email %></h3>

<!-- if logged in... -->
<%= link_to "edit", edit_organization_path %>
<%= link_to "destroy", @organization, method: :delete %>

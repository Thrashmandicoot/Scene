<!DOCTYPE html>
<html>
<head>
  <title>Scene</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

<div ng-controller="ModalSignupCtrl">
    <script type="text/ng-template" id="myModalContent.html">
        <div class="modal-header">
            <h3 class="modal-title">Sign Up</h3>
        </div>
        <div class="modal-body">
              <div ng-repeat="item in items">
                  <a class="btn btn-default btn-block" href="{{ item.link }}" selected.item = item>{{ item.title }}</a>
              </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
        </div>
    </script>
</div>

<div class="collapse navbar-collapse">
  <ul class="nav navbar-nav">
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'Artists', artists_path %></li>
    <li><%= link_to 'Pieces', pieces_path %></li>
    <li><%= link_to 'Spaces', spaces_path %></li>
    <% if current_user %>
    <li><%= link_to 'Logout', logout_path, method: :post %></li>
    <% else %>
    <li><%= link_to 'Login', login_path %></li>
    <li><a href="" ng-click="open()" ng-controller="ModalSignupCtrl">Sign Up</a></li>
    <% end %>
  </ul>
</div>

  <%= yield %>

</body>
</html>

<script type="text/javascript">
  $(document).ready(function(){
      showPiece();
      zoomHover();
  })
</script>

<h1 class="debugx b-dbot mb-2 mt-2">Pieces</h1>
<div class="line span-12-d mb-4"></div>

<div class="debugx col span-1-d fix ml-4 mt--2">
  <h3>Category</h3>
  <p><%= link_to "All", pieces_path %></p>
    <% @tags.each do |tag| %>
       <p><%= link_to tag, tag_path(tag) %></p>
    <% end %>
</div>


<div class="debugx col span-11-d mb-15">
  <!-- Controls centering of the whole picture div -->
  <div class="debugx ml-25">

    <div id="target">
      <!-- Piece loads here on click -->
    </div>

      <div class="debugx allpics">
      <% @pieces.each do |piece| %>
      <% artist = Artist.find(piece.artist_id) %>

          <div class="debugx fl-end m-1 viewport">
            <a class="pic" href="<%= artist_piece_path(piece.artist_id, piece) %>" >
              <span class="dark-background"> <%= piece.title %> <em>by <%= artist.name %></em></span>
              <img src="<%= piece.img %>" alt="Piece Pic" class="image-style" />
            </a>
          </div>

      <% end %>
      </div>

  </div>
</div>




